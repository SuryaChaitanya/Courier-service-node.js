<% include partials/header %>
<div id="jumbotron">
<div id="container" style=" width : 350px; margin: 0 auto; border: 1px solid black;padding:20px">
	<form method = "post" action = "/billing">
		 
        <label for="object">Object :</label>
		<select name="type" id="object">
			<option>Gifts</option>
			<option>Pharmacy</option>
			<option>Business</option>
			<option>Dresses</option>
			<option>Passport</option>
			<option>Cakes</option>
		</select>
    
		
		
		<div class="form-group">
		    <label for="number"></label>
		    <input type="text" class="form-control" id="number" name="number" placeholder="Number of items" required>
		</div>
		

		<label for="service">Service :</label>
		<div class="form-check form-check-inline" style="display: inline;">
  			<label class="form-check-label">
   				 <input class="form-check-input" type="radio" name="service" id="service" value="post" required> Post
  			</label>
		</div>
		<div class="form-check form-check-inline" style="display: inline;">
  			<label class="form-check-label">
   				 <input class="form-check-input" type="radio" name="service" id="service" value="speed-post" required> Speed-post
  			</label>
		</div>
		<div class="form-check form-check-inline" style="display: inline;">
  			<label class="form-check-label">
   				 <input class="form-check-input" type="radio" name="service" id="service" value="courier" required> Courier
  			</label>
		</div>
        <br>
        	<button type="submit" class="btn btn-primary btn-block">Submit</button>
		</form>
</div>
</div>

<hr></hr>
<div style = "text-align : center;"><h1>Your Orders!!</h1></div>
<hr></hr>

<div class="container">
	<% parcels.forEach(function(parcel){ %>
		<div class="row clearfix" style="background-color: #333;">
			<div class="col-md-auto col-sm-auto" style =" border : 2px solid black;background-color: #4682b4;color:white;">
				<h4><strong>Order Id:    </strong><span><%= parcel.order_id %></span></h4>
				<h4><strong>receiver :    </strong><span><%= parcel.receiver.first_name %></span></h4>
				<a href="/courier/<%=parcel._id%>" style="color: gold;">view more...</a>
			</div>
		</div>
	
	<% }); %>
	
</div>

<% include partials/footer %>